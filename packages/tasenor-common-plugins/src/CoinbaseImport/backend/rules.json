{
  "rules": [
    {
      "name": "Coinbase withdrawal (v1)",
      "filter": "type == 'withdrawal'",
      "result": [
        {
          "reason": "type",
          "type": "'external'",
          "asset": "unit",
          "amount": "-amount"
        },
        {
          "reason": "type",
          "type": "isCurrency(unit) ? 'currency' : 'crypto'",
          "asset": "unit",
          "amount": "amount"
        }
      ]
    },
    {
      "name": "Coinbase deposit (v1)",
      "filter": "type == 'deposit'",
      "result": [
        {
          "reason": "type",
          "type": "'external'",
          "asset": "unit",
          "amount": "-amount"
        },
        {
          "reason": "type",
          "type": "isCurrency(unit) ? 'currency' : 'crypto'",
          "asset": "unit",
          "amount": "amount"
        }
      ]
    },
    {
      "name": "Trade (v1)",
      "filter": "type == 'match'",
      "result": [
        {
          "reason": "'trade'",
          "type": "isCurrency(unit) ? 'currency' : 'crypto'",
          "asset": "unit",
          "amount": "amount"
        }
      ]
    },
    {
      "name": "Trading fee (v1)",
      "filter": "type == 'fee'",
      "result": [
        {
          "reason": "'fee'",
          "type": "isCurrency(unit) ? 'currency' : 'crypto'",
          "asset": "unit",
          "amount": "-amount"
        }
      ]
    },

    {
      "name": "Rewards (v2)",
      "filter": "type == 'Learning Reward'",
      "result": [
        {
          "data": {
            "text": "Notes",
            "currency": "Currency",
            "currencyValue": "Price * 100"
          },
          "type": "'crypto'",
          "asset": "Asset",
          "amount": "Quantity",
          "reason": "'income'"
        },
        {
          "type": "'statement'",
          "asset": "'LEARNING_REWARDS'",
          "reason": "'income'",
          "amount": "null"
        }
      ]
    },
    {
      "name": "Selling (v2)",
      "filter": "type == 'Sell'",
      "result": [
        {
          "data": {
            "text": "Notes"
          },
          "type": "'crypto'",
          "asset": "Asset",
          "amount": "-Quantity",
          "reason": "'trade'"
        },
        {
          "reason": "'fee'",
          "type": "'currency'",
          "asset": "Currency",
          "amount": "Fees"
        },
        {
          "type": "'currency'",
          "asset": "Currency",
          "amount": "Subtotal",
          "reason": "'trade'"
        }
      ]
    },
    {
      "name": "Buying (v2)",
      "filter": "type == 'Buy'",
      "result": [
        {
          "data": {
            "text": "Notes"
          },
          "type": "'crypto'",
          "asset": "Asset",
          "amount": "Quantity",
          "reason": "'trade'"
        },
        {
          "reason": "'fee'",
          "type": "'currency'",
          "asset": "Currency",
          "amount": "Fees"
        },
        {
          "type": "'currency'",
          "asset": "Currency",
          "amount": "-Subtotal",
          "reason": "'trade'"
        }
      ]
    },
    {
      "name": "Send (v2)",
      "filter": "type == 'Send'",
      "result": [
        {
          "data": {
            "text": "Notes",
            "rates": "rates(Asset, Price)"
          },
          "type": "'crypto'",
          "asset": "Asset",
          "amount": "-Quantity",
          "reason": "'expense'"
        },
        {
          "data": {
            "text": "Notes",
            "currency": "Currency",
            "currencyValue": "Total * 100"
          },
          "type": "'statement'",
          "asset": "'NEEDS_MANUAL_INSPECTION'",
          "amount": "Total",
          "reason": "'expense'"
        }
      ]
    },
    {
      "name": "Receive (v2)",
      "filter": "type == 'Receive'",
      "result": [
        {
          "data": {
            "text": "Notes",
            "rates": "rates(Asset, Price)"
          },
          "type": "'crypto'",
          "asset": "Asset",
          "amount": "-Quantity",
          "reason": "'income'"
        },
        {
          "data": {
            "text": "Notes",
            "currency": "Currency",
            "currencyValue": "Total * 100"
          },
          "type": "'statement'",
          "asset": "'NEEDS_MANUAL_INSPECTION_IN'",
          "amount": "Total",
          "reason": "'income'"
        }
      ]
    },
    {
      "name": "Convert (v2)",
      "filter": "type == 'Convert'",
      "result": [
        {
          "data": {
            "text": "Notes",
            "currency": "Currency",
            "currencyValue": "-Total * 100"
          },
          "type": "'crypto'",
          "asset": "giveAsset",
          "amount": "-giveAmount",
          "reason": "'trade'"
        },
        {
          "type": "'crypto'",
          "asset": "takeAsset",
          "amount": "takeAmount",
          "reason": "'trade'"
        },
        {
          "if": "Fees",
          "data": {
            "text": "Notes"
          },
          "type": "'currency'",
          "asset": "Currency",
          "amount": "Fees",
          "reason": "'fee'"
        }
      ]
    }
  ]
}