{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DEBUG_STOCK",
    "DEBUG_BALANCE",
    "DEBUG_RULES",
    "DEBUG_SEGMENTATION",
    "DEBUG_CLASSIFICATION",
    "DEBUG_ANALYSIS",
    "DEBUG_EXECUTION",
    "VAULT_URL",
    "SECRET",
    "NODE_ENV",
    "DATABASE_URL"
  ],
  "pipeline": {
    "lint": {
      "inputs": ["src/**"]
    },
    "build": {
      "inputs": ["src/**"]
    },
    "fix": {
      "inputs": ["src/**", "test/**"]
    },
    "test": {
      "inputs": ["src/**", "test/**"]
    }
  }
}
