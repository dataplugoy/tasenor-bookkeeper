{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "API_URL",
    "API_SITE_TOKEN",
    "DATABASE_URL",
    "DB_HOST_OVERRIDE",
    "DEBUG_ANALYSIS",
    "DEBUG_BALANCE",
    "DEBUG_CLASSIFICATION",
    "DEBUG_EXECUTION",
    "DEBUG_RULES",
    "DEBUG_SEGMENTATION",
    "DEBUG_STOCK",
    "TASENOR_SITE_TOKEN",
    "INITIAL_PLUGIN_REPOS",
    "NODE_ENV",
    "PORT",
    "SECRET",
    "TASENOR_API_URL",
    "UI_ORIGIN_URL",
    "VAULT_URL"
  ],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "demo": {
      "cache": false,
      "persistent": true
    },
    "version": {
      "inputs": ["package.json"]
    },
    "lint": {
      "inputs": ["src/**"]
    },
    "build": {
      "inputs": ["src/**"]
    },
    "fix": {
      "inputs": ["src/**", "test/**"]
    },
    "test": {
      "inputs": ["src/**", "test/**"]
    }
  }
}
