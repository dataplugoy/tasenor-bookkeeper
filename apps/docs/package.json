{
  "name": "@tasenor/docs",
  "version": "1.11.8",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "description": "Tasenor developer documentation",
  "author": "Tommi Ronkainen <tommi.ronkainen@gmail.com>",
  "license": "AGPL",
  "scripts": {
    "docs-index": "rm -fr build && mkdir build && cp -r index/* build",
    "docs-api": "npx swagger-cli bundle -o api/openapi.json api/openapi.yaml && npx @redocly/cli build-docs -o build/api/index.html api/openapi.yaml",
    "docs-code": "npx typedoc",
    "build": "pnpm run docs-index && pnpm run docs-api && pnpm run docs-code",
    "lint": "openapi lint api/openapi.yaml --skip-rule operation-4xx-response --extends recommended",
    "ci": "pnpm run lint",
    "nightly": "pnpm run ci",
    "release": "pnpm version patch",
    "release-minor": "pnpm version minor",
    "show-version": "jq .version < package.json"
  },
  "dependencies": {
    "typedoc": "^0.24.8",
    "typedoc-plugin-mermaid": "^1.10.0"
  },
  "devDependencies": {
    "@redocly/cli": "1.0.2",
    "swagger-cli": "^4.0.4"
  }
}
